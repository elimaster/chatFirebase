<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/users_profile_image"
            android:src="@drawable/headshot_7"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/user_profile_name"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="start"
                android:layout_gravity="start"
                android:textAlignment="textStart"
                android:text="user name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/user_online_status"
                android:src="@drawable/circle_icon_green"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:visibility="invisible"
                android:layout_width="18dp"
                android:layout_height="18dp"/>


        </LinearLayout>

        <TextView
            android:id="@+id/user_profile_status"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:gravity="start"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:text="user status"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/accept_request_btn"
                android:text="accept"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:background="@android:color/holo_green_light"
                android:layout_width="wrap_content"
                android:visibility="invisible"
                android:layout_height="30dp"/>
            <Button
                android:id="@+id/accept_cancel_btn"
                android:text="cancel"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:layout_marginLeft="15dp"
                android:background="@android:color/holo_red_dark"
                android:textColor="@android:color/background_light"
                android:layout_width="wrap_content"
                android:visibility="invisible"
                android:layout_height="30dp"/>
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>

</RelativeLayout>